sleep 1
echo -e "$MAGENTA\t\t -\U2192 Age$CYAN:        infant, child, young-adult, adult, elderly"
sleep 1
echo -e "$MAGENTA\t\t -\U2192 Ethnicity$CYAN:  white, latino, asian, black"
sleep 1
