echo -e "$MAGENTA\t\t -\U2192 Confidence$CYAN: 0.0 - 1.0, Default: 0.5"   
sleep 1
echo -e "$MAGENTA\t\t -\U2192 Emotion$CYAN:    joy, neutral, surprise"
sleep 1
